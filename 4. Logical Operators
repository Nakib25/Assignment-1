# Logical Operators

# Condition 1: Has ID card
has_id_card = True

# Condition 2: Has library access
has_library_access = False

# Using 'and' - both conditions must be True
print("Has ID card AND library access:", has_id_card and has_library_access)

# Using 'or' - at least one condition must be True
print("Has ID card OR library access:", has_id_card or has_library_access)

# Using 'not' - reverses the boolean value
is_student = False
print("Not a student:", not is_student)
